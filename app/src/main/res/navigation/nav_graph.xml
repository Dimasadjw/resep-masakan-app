<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.resepmasakan.Fragments.HomeFragment"
        android:label="@string/Home"
        tools:layout="@layout/activity_home" />

    <fragment
        android:id="@+id/nav_bookmark"
        android:name="com.example.resepmasakan.Fragments.FavoriteFragment"
        android:label="@string/Favorite"
        tools:layout="@layout/activity_favorite" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.resepmasakan.Fragments.ProfileFragment"
        android:label="@string/Profile"
        tools:layout="@layout/activity_profile">

        <argument
            android:name="emailPengguna"
            app:argType="string"
            android:defaultValue="user@example.com" />
    </fragment>

    <action android:id="@+id/action_global_nav_profile"
            app:destination="@id/nav_profile" />

</navigation>