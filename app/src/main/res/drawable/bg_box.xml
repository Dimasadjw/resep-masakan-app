<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background putih -->
    <solid android:color="#FFFFFF"/>

    <!-- Border abu tipis -->
    <stroke
        android:width="1dp"
        android:color="#CFCFCF" />

    <!-- Sudut membulat -->
    <corners android:radius="10dp"/>

    <!-- Padding internal (opsional, karena EditText sudah punya padding) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
