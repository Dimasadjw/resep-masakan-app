<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background putih -->
    <solid android:color="#FFFFFF" />

    <!-- Border tipis abu -->
    <stroke
        android:width="1dp"
        android:color="#CFCFCF" />

    <!-- Sudut membulat -->
    <corners android:radius="10dp" />

    <!-- Padding tambahan agar spinner terlihat rapi -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp" />

</shape>
